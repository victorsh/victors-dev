// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Item {
  id          Int       @id @default(autoincrement())
  data        String
  createdAt   DateTime  @default(now()) @map(name: "created_at")
}

model Message {
  id          Int       @id @default(autoincrement())
  message     String
  user        String
  createdAt   DateTime  @default(now()) @map(name: "created_at")
}

model Tasks {
  id            Int       @id @default(autoincrement())
  task          String
  createdBy     String?
  createdFor    String?
  createdAt     DateTime  @default(now()) @map(name: "created_at")
  completed     Boolean   @default(false)
  completedBy   String?
  completedAt   DateTime?
}

model CalendarEvent {
  id              Int         @id @default(autoincrement())
  title           String
  color           String
  days            DateTime
  beginStartTime  DateTime?
  beginStopTime   DateTime?
  endStartTime    DateTime?
  endStopTime     DateTime?
  priority        Int?
  createdAt       DateTime
  createdBy       String
  createdFor      String?
  password        String?
}
